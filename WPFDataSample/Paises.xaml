                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#7F000000"/>
                    <GradientStop Color="#0050A0B4" Offset="0.999"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <Button x:Name="AddButton" Content="_Nuevo" HorizontalAlignment="Left" Height="32" Margin="9,10,0,0" VerticalAlignment="Top" Width="119" BorderThickness="0" Background="#00000000" BorderBrush="{x:Null}"/>
