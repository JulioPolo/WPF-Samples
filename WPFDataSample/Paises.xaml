                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Nombre Pais:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="nombrePaisTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3.026,4,-57.139,3.887" Grid.Row="0" Text="{Binding NombrePais, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="181"/>
