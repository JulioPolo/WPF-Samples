                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label VerticalAlignment="Center" Grid.Row="0" Margin="3" HorizontalAlignment="Left" Grid.Column="0" Content="Pais Id:"/>
            <TextBox x:Name="paisIdTextBox" Width="83" VerticalAlignment="Center" Text="{Binding PaisId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Row="0" Margin="3.078,4,-24.304,3.887" Height="23" HorizontalAlignment="Left" Grid.Column="1"/>
