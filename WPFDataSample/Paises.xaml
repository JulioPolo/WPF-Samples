            </Grid.RowDefinitions>
            <Label Content="UN:" Grid.Column="0" HorizontalAlignment="Left" Margin="3" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="uNTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="2.939,4,-0.174,4.722" Grid.Row="0" Text="{Binding UN, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="57"/>
