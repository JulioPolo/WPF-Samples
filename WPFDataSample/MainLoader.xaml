<Window x:Class="WPFDataSample.MainLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainLoader" Height="452.539" Width="677.322">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="PaisesButton" Content="Paises" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Click="PaisesButton_Click" Background="#FFF39410" BorderThickness="0" UseLayoutRounding="False" BorderBrush="{x:Null}" Height="38.334"/>
        <Button x:Name="ExitButton" Content="Salir" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10" Background="Red" BorderThickness="0" UseLayoutRounding="False" BorderBrush="{x:Null}" Height="38.334" Click="ExitButton_Click"/>

    </Grid>
</Window>
